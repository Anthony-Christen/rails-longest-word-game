<div class="container">
  <h1>New game</h1>
  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score">
    <label for="word">What is the longest word you can find?</label>
    <div class="inputs">
      <input type="text" id="word" name="word">
      <input type="submit" value="Play" id="btn-blue">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
